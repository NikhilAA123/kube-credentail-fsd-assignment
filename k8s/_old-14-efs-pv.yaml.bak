apiVersion: v1
kind: PersistentVolume
metadata:
  name: efs-pv
spec:
  capacity:
    storage: 5Gi # Logical label; EFS is elastic
  volumeMode: Filesystem
  accessModes:
    - ReadWriteMany # Multiple pods across nodes can use it
  persistentVolumeReclaimPolicy: Retain
  storageClassName: manual
  csi:
    driver: efs.csi.aws.com
    volumeHandle: fs-01d487cd9ef965e34::fsap-082cf239d946c10c5
